{
    "manifest_version": 3,
    "name": "Phishing Guardian",
    "version": "1.0.0",
    "description": "On-device phishing detection",
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "webNavigation",
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["contentScript.js"],
        "run_at": "document_start"
    }],
    "web_accessible_resources": [{
        "resources": [
            "redirect.html",
            "redirect.js",
            "assets/alert.png",
            "assets/shield.png",
            "assets/ui.css"
        ],
        "matches": ["<all_urls>"]
    }],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "assets/shield.png"
    },
    "icons": {
        "16": "assets/shield.png",
        "48": "assets/shield.png",
        "128": "assets/shield.png"
    }
}